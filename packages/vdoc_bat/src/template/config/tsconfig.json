{
  "compilerOptions": {
    // 指定要编译的 ECMAScript 目标版本，这里设置为 "ES2022"
    "target": "ES2022",
    // 当 useDefineForClassFields 设置为 true 时，TypeScript 编译器会使用 Object.defineProperty 方法来定义类字段。这种方式可以提供更高级的控制和特性，
    "useDefineForClassFields": true,
    // 指定模块的生成规范，这里设置为 "ESNext"。
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "outDir": "./dist",

    /* Bundler mode */
    // "moduleResolution": "bundler",
    // "allowImportingTsExtensions": true,
    // "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "declaration": true,
    "declarationDir": "dist/types",
    "esModuleInterop": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
    // typings
    // "typeRoots": [
    //   "./typings"
    // ]
  },
  "include": [
    "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue",
    "vite.config.ts", "vue.env.d.ts", "global.d.ts"
  ],
  "exclude": [
    "src/template"
  ]
  // "references": [{ "path": "./tsconfig.node.json" }]
}
